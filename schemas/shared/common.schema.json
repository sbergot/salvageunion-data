{
  "$schema": "https://json-schema.org/draft-07/schema",
  "definitions": {
    "activationCost": {
      "anyOf": [{ "type": "number" }, { "enum": ["Variable"] }]
    },
    "damage": {
      "anyOf": [
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "type": { "enum": ["HP", "SP"] },
            "amount": { "type": "number" }
          }
        },
        { "enum": ["2d20", "X SP"] }
      ]
    },
    "traits": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "type": {
                "enum": [
                  "uses",
                  "explosive",
                  "burn",
                  "hot (x)",
                  "multi-attack",
                  "personnel capacity"
                ]
              },
              "amount": { "type": "number" }
            }
          },
          {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "type": {
                "enum": [
                  "pilot equipment",
                  "hacking",
                  "melee",
                  "armor",
                  "rigging",
                  "ballistic",
                  "unwieldy",
                  "silent",
                  "communicator",
                  "salvaging",
                  "energy",
                  "heavy",
                  "shield",
                  "hover",
                  "anti-organic",
                  "overheat",
                  "climbing",
                  "missile",
                  "deadly",
                  "deadly (creatures only)",
                  "flashy",
                  "scanner",
                  "heat spike",
                  "optics",
                  "targeter",
                  "hot (x)",
                  "guided",
                  "jamming",
                  "pinning",
                  "escape",
                  "wield",
                  "anti-shielding",
                  "ion",
                  "amphibious",
                  "explosive (1d20)",
                  "heat hpike",
                  "hot (1d20)",
                  "wheeled",
                  "meld infection",
                  "irradiated",
                  "fast",
                  "immobile",
                  "poison",
                  "burrower",
                  "fly",
                  "load"
                ]
              }
            }
          }
        ]
      }
    },
    "rollTable": {
      "anyOf": [
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "type": { "enum": ["standard"] },
            "1": { "type": "string" },
            "20": { "type": "string" },
            "11-19": { "type": "string" },
            "6-10": { "type": "string" },
            "2-5": { "type": "string" }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "type": { "enum": ["standard2"] },
            "1": { "type": "string" },
            "19-20": { "type": "string" },
            "11-18": { "type": "string" },
            "6-10": { "type": "string" },
            "2-5": { "type": "string" }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "type": { "enum": ["full"] },
            "1": { "type": "string" },
            "2": { "type": "string" },
            "3": { "type": "string" },
            "4": { "type": "string" },
            "5": { "type": "string" },
            "6": { "type": "string" },
            "7": { "type": "string" },
            "8": { "type": "string" },
            "9": { "type": "string" },
            "10": { "type": "string" },
            "11": { "type": "string" },
            "12": { "type": "string" },
            "13": { "type": "string" },
            "14": { "type": "string" },
            "15": { "type": "string" },
            "16": { "type": "string" },
            "17": { "type": "string" },
            "18": { "type": "string" },
            "19": { "type": "string" },
            "20": { "type": "string" }
          }
        }
      ]
    }
  }
}
